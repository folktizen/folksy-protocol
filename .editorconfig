# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.
# See https://EditorConfig.org for details

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.yml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# JavaScript and TypeScript
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

# Solidity files
[*.sol]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Ignore minified files
[*.min.js]
indent_size = 2
